@using HompPage.Models;

@model List<HompPage.Models.Articles>

@{
    ViewBag.Title = "ArticleList";
    Layout = "~/Views/Shared/_HomePageLayoutPage.cshtml";
}

<div class="content-wrap">
    <div id="blogpost" class="inner-content">
        <section class="inner-section">
            <div class="container-fluid nopadding">
                <div class="wow fadeInDown" data-wow-delay="0.6s" data-wow-offset="10">
                    <div id="post-comment">
                        <h4 class="font-accident-one-light uppercase">게시글 목록</h4>
                    </div>
                    <div class="dividewhite2"></div>

                    <div class="row">                       
                        <table  class="footable table table-striped toggle-arrow-tiny"data-pageing-size="10">
                            <thead>
                                <tr>
                                    <th data-toggle="true" data-sort-ignore="true" width="5%">순번</th>
                                    @*<th data-toggle="true" data-sort-ignore="true" width="5%">글 아이디</th>*@
                                    <th data-sort-ignore="true" width="5%">종류</th>
                                    <th data-hide="phone,tablet"  width="10%">제목</th>
                                    <th data-toggle="true" data-sort-ignore="true" width="30%">내용</th>
                                    <th data-toggle="true" class="text-center" width="10%">작성일</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 0;
                                    int idx = 0;
                                }
                                @foreach (var item in Model)
                                {
                                    idx = Model.Count - i;
                                    <tr>
                                        <td>@idx</td>
                                        @*<td><a href="/Board/Edit?aidx=@item.ArticleIDX">@item.ArticleIDX</a></td>*@
                                        <td>@item.ArticleType</td>
                                        <td><a href="/Board/Edit?aidx=@item.ArticleIDX">@item.Title</a></td>
                                        <td>@item.Contents</td>
                                        <td>@item.ModifyDate</td>
                                    </tr>
                                    i++;
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="6"><ul class="pagination pull-right" ></ul>
                                   
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                </div>
            </div>
            <div class="dividewhite8"></div>
        </section>
    </div>
</div>


@section Scripts{
    <script> 
        $(document).ready(function () {
            $('.footable').footable();
        });

       
    </script>
    }
